<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
      body {
        background: linear-gradient(to right, #4e73df, #1cc88a);
        font-family: Arial, sans-serif;
        color: #fff;
        padding: 20px;
      }
      .profile-container {
        display: flex;
        gap: 20px;
        margin-top: 20px;
      }
      .user-details {
        flex: 1;
        max-width: 300px;
        background-color: #ffffff;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        color: #333;
      }
      .user-details h4 {
        color: #4e73df;
      }
      .favorites-container {
        flex: 3;
        background-color: #ffffff;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        color: #333;
      }
      .favorite-card {
        border: 1px solid #ddd;
        border-radius: 10px;
        padding: 15px;
        margin-bottom: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }
      .favorite-card h5 {
        color: #4e73df;
      }
    </style>
  </head>
  <body>
    <h1 class="text-center">User Profile</h1>
    <div class="profile-container">
      <!-- User Details -->
      <div class="user-details">
        <h4>User Details</h4>
        <p><strong>Username:</strong> <%= user.name %></p>
        <p><strong>Email:</strong> <%= user.email %></p>
        <p><strong>Location:</strong> <%= user.location %></p>
      </div>

      <!-- User Favorites -->
      <div class="favorites-container">
        <h4>Your Favorites</h4>
        <% if (favorites.length > 0) { %>
          <% favorites.forEach(favorite => { %>
            <div class="favorite-card">
              <h5>Property: <%= favorite.property.propertyName %></h5>
              <p><strong>Location:</strong> <%= favorite.property.propertyLocation %></p>
              <p><strong>Status:</strong> <%= favorite.property.propertyStatus %></p>
              <p><strong>Price:</strong> $<%= favorite.property.propertyPrice %></p>
              <p><strong>Bedrooms:</strong> <%= favorite.property.bedroom %></p>
              <p><strong>Bathrooms:</strong> <%= favorite.property.bathroom %></p>
              <p><strong>Garden:</strong> <%= favorite.property.garden ? 'Yes' : 'No' %></p>
              <p><strong>Note:</strong> <%= favorite.favorite.note %></p> 
            </div>
          <% }); %>
        <% } else { %>
          <p>No favorites found.</p>
        <% } %>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
