<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Payments - Real Estate Management</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background: linear-gradient(to right, #4e73df, #1cc88a);
        font-family: 'Arial', sans-serif;
        color: #fff;
        margin: 0;
        padding: 0;
      }

      .container {
        margin-top: 100px;
        background: rgba(255, 255, 255, 0.9);
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
      }

      .table-container {
        overflow-x: auto;
      }

      .table {
        background: #f8f9fc;
      }

      .table th {
        background: #4e73df;
        color: white;
        font-size: 1rem;
      }

      .btn-back {
        color: #fff;
        background-color: #1cc88a;
        border: none;
        padding: 10px 15px;
        border-radius: 5px;
        text-decoration: none;
        margin-bottom: 20px;
      }

      .btn-back:hover {
        background-color: #17a673;
      }
    </style>
  </head>
  <body>
    <div class="container pt-5">
      <%- include('partials/navigationBar') %>
      <a href="/welcome" class="btn-back">Back to Dashboard</a>
      <h2 class="text-center mb-4 text-primary">Your Payments</h2>
      <div class="table-container">
        <table class="table table-bordered text-center">
          <thead>
            <tr>
              <th>#</th>
              <th>Amount</th>
              <th>Date</th>
              <th>Method</th>
              <th>Transaction ID</th>
            </tr>
          </thead>
          <tbody>
            <% if (payment.length > 0) { %>
              <% payment.forEach((payment, index) => { %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td>$<%= parseFloat(payment.amount).toFixed(2) %></td>
                  <td><%= new Date(payment.date).toLocaleDateString() %></td>
                  <td><%= payment.method %></td>
                  <td><%= payment.transactionId ? payment.transactionId : 'N/A' %></td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="5">No payments found.</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
